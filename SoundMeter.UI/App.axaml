<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SoundMeter.UI.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Themes/ButtonTheme.axaml"/>
				<ResourceInclude Source="/Themes/DarkStyleButtonTheme.axaml"/>
				<ResourceInclude Source="/Themes/Colors.axaml"/>
				<ResourceInclude Source="/Controls/LargeLabelControl.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
    <Application.Styles>
		<StyleInclude Source="/Controls/SvgButton.axaml"/>
		<StyleInclude Source="/Controls/HeaderControl.axaml"/>
		<StyleInclude Source="/Controls/AnimatedPopup.axaml"/>
		<StyleInclude Source="/Controls/SoundVolumeScaleControl.axaml"/>
		<StyleInclude Source="/Controls/FooterControl.axaml"/>
        <FluentTheme />
    </Application.Styles>
</Application>